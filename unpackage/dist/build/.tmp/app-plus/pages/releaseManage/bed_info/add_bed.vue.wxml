<template name="9eff90da"><view class="_view data-v-73adca4f add_bed_page"><view class="_view data-v-73adca4f title">选择床铺</view><view class="_view data-v-73adca4f bed-default-option" wx:if="{{defaultBedOptions.length>0}}"><view class="_view data-v-73adca4f option-item {{[  curActiveBedOption && curActiveBedOption.option == item.option    ? 'option-item-active'    : '']}}" catchtap="handleProxy" wx:key="index" key="{{index}}" data-eventid="{{'9eff90da-0-'+index}}" data-comkey="{{$k}}" wx:for="{{defaultBedOptions}}" wx:for-index="index" wx:for-item="item"><view class="_view data-v-73adca4f bed-type">{{item.type=='double'?'双人床':'单人床'}}</view><view class="_view data-v-73adca4f bed-size">宽{{item.weight}}m长{{item.length}}m</view></view></view><view class="_view data-v-73adca4f add-other-bed" wx:if="{{!CustomBedOption}}" catchtap="handleProxy" data-eventid="{{'9eff90da-1'}}" data-comkey="{{$k}}"><text class="_text data-v-73adca4f iconfont icon-jia">其他类型和尺寸</text></view><view class="_view data-v-73adca4f bed-other-option {{[  curActiveBedOption && curActiveBedOption.option == CustomBedOption.option    ? 'option-item-active'    : '']}}" wx:if="{{CustomBedOption}}" catchtap="handleProxy" data-eventid="{{'9eff90da-3'}}" data-comkey="{{$k}}"><view class="_view data-v-73adca4f left"><view class="_view data-v-73adca4f bed-type" wx:if="{{CustomBedOption.type=='double'}}">双人床</view><view class="_view data-v-73adca4f bed-type" wx:elif="{{CustomBedOption.type=='single'}}">单人床</view><view class="_view data-v-73adca4f bed-type" wx:elif="{{CustomBedOption.type=='sofa'}}">沙发</view><view class="_view data-v-73adca4f bed-type" wx:elif="{{CustomBedOption.type=='canopy'}}">双层床</view><view class="_view data-v-73adca4f bed-type" wx:elif="{{CustomBedOption.type=='tatami'}}">榻榻米</view><view class="_view data-v-73adca4f bed-type" wx:elif="{{CustomBedOption.type=='other'}}">其他</view><view class="_view data-v-73adca4f bed-size">宽{{CustomBedOption.weight}}m长{{CustomBedOption.length}}m</view></view><